// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Shop {
  id           Int      @id @default(autoincrement())
  shop         String   @unique
  accessToken  String
  keyVersion   Int      @default(1)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Batch {
  id           Int      @id @default(autoincrement())
  shop         String
  description  String
  payloadJson  String   // JSON string describing changes
  createdAt    DateTime @default(now())
}

model ChangeLog {
  id          Int      @id @default(autoincrement())
  shop        String
  changesJson String   // [{variantId, before:{}, after:{}, metafieldsBefore:[], metafieldsAfter:[]}, ...]
  checksum    String
  createdAt   DateTime @default(now())
}

model Preset {
  id          Int      @id @default(autoincrement())
  shop        String
  name        String
  filtersJson String
  columnsJson String
  createdAt   DateTime @default(now())
}
